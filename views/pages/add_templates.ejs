<div class="row">
    <div class="col-lg-12">
        <div class="card m-b-20">
            <div class="card-body">

                <form class="" action="#">
                    <div class="form-group row">
                    <label for="pb_group_name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-12">
                        <i class="tick-mark ti-check-box"></i>
                        <span class="text-muted m-b-30 font-14">
                            Each block of 160 characters will cost 1 credit.
                        </span>
                    </div>
                    </div>
                    <div class="form-group row">
                        <label for="pb_group_desc" class="col-sm-3 col-form-label">Message</label>
                        <div class="col-sm-9">
                            <textarea id="pb_group_desc" class="form-control" maxlength="225" rows="3" placeholder="Description"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="pb_group_name" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input id="message_count" type="text" class="form-control"  placeholder="0"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-success waves-effect waves-light">
                                Add
                            </button>
                            <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                Reset
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->

