<div class="row">
    <div class="col-lg-12">
        <div class="card m-b-20">
            <div class="card-body">
                <form class="" action="#">
                    <div class="form-group row">
                        <label for="pb_group_name" class="col-sm-3 col-form-label"> Shortcode</label>
                        <div class="col-sm-9">
                            <select class="form-control select2">
                                <option selected>Status</option>
                                <option value="1">54624</option>
                                <option value="2">54624</option>
                                <option value="2">54624</option>
                                <option value="2">54624</option>
                                <option value="2">54624</option>
                                <option value="2">54624</option>
                                <option value="2">54624</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="pb_group_desc" class="col-sm-3 col-form-label">Keyword</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" required data-parsley-minlength="3" required placeholder="Keyword"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="pb_group_name" class="col-sm-3 col-form-label"> Service Type</label>
                        <div class="col-sm-9">
                            <select class="form-control select2">
                                <option value="1">Auto Response</option>
                                <option value="2">URL Forward</option>
                            </select>
                            <div class="url-forward">
                                Please enter a well formed URL below starting with http://
                                Variables that can be included in the URL
                                Add #msg# to include Complete Message
                                Add #msisdn# to include Sender's Mobile Number 
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                       <label class="col-sm-3 col-form-label">Service Details</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" required placeholder="Service Details"/>
                        </div>
                    </div>
                    <div class="form-group row" style="margin-bottom: 0rem;">
                       <label class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-9" style="padding-top: 10px;">
                            <input type="checkbox" id="chk_email_show">
                            <label for="chk18" class="toggle"></label>
                        </div>
                    </div>
                    <div class="form-group row" style="margin-bottom: 0rem;">
                       <label class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9" id="email_id" style="display:none">
                            <div class="form-group row">
                                <div class="col-sm-12" >
                                    <select class="form-control select2">
                                        <option selected>Select Email</option>
                                        <option value="1">email@gmail.com</option>
                                        <option value="2">email@gmail.com</option>
                                        <option value="2">email@gmail.com</option>
                                        <option value="2">email@gmail.com</option>
                                        <option value="2">email@gmail.com</option>
                                        <option value="2">email@gmail.com</option>
                                        <option value="2">email@gmail.com</option>
                                    </select>
                                    OR&nbsp;<a href="#">Add a new Email Address</a>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="pb_group_desc" class="col-sm-3 col-form-label">Email Subject</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="Email Subject" required/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="pb_group_desc" class="col-sm-3 col-form-label">Message</label>
                                <div class="col-sm-9">
                                    <textarea id="pb_group_desc" class="form-control" maxlength="500" rows="3" placeholder="Description"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">SMS</label>
                        <div class="col-sm-9" style="padding-top: 10px;">
                            <input type="checkbox" id="chk_head">
                            <label for="chk18" class="toggle"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-success waves-effect waves-light">
                                Add
                            </button>
                            <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                Reset
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->

<script type="text/javascript">
    $(document).ready(function() {
        $('form').parsley();
        $("#page_title").html(<%- JSON.stringify(title) %>);

        $("#chk_email_show").on("click",function(){
            $("#email_id").toggle("show-add-kwemail-det");
        })

    });
</script>

