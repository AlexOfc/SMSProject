<div class="row">
    <div class="col-lg-12">
        <div class="card m-b-20">
            <div class="card-body">
                <form id="frm_create_rule">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Rule Name</label>
                        <div class="col-sm-9">
                        <input type="text" class="form-control" name="ruleName" required placeholder="Rule Name" required disabled/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">DND</label>
                        <div class="col-sm-9">
                        <input type="radio" name="ruleDnd" required/>&nbsp;True
                        &nbsp;<input type="radio" name="ruleDnd" required/>&nbsp;&nbsp;False
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">MNP</label>
                        <div class="col-sm-9">
                        <input type="radio" value="true" name="ruleMnp" value="true" required/>&nbsp;True
                        &nbsp;<input type="radio" value="false" name="ruleMnp" required/>&nbsp;&nbsp;False
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Operator</label>
                        <div class="col-sm-9">
                            <select class="form-control select2" name="operator">
                                <option value="">Open this select menu</option>
                                <option value="1">Operator1</option>
                                <option value="2">Operator2</option>
                                <option value="3">Operator3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Circle</label>
                        <div class="col-sm-9">
                            <select class="form-control select2" name="circle">
                                <option value="" selected>Open this select menu</option>
                                <option value="1">Circle1</option>
                                <option value="2">Circle2</option>
                                <option value="3">Circle3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">SMSE</label>
                        <div class="col-sm-9">
                            <select class="form-control select2" name="smse">
                                <option value="" selected>Open this select menu</option>
                                <option value="1">SMSE1</option>
                                <option value="2">SMSE2</option>
                                <option value="3">SMSE3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <button id="btnSubmit" type="submit" class="btn btn-success waves-effect waves-light">
                                Submit
                            </button>
                            <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                Cancel
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->

<script type="text/javascript">
    $(document).ready(function() {
        /*$('form').parsley();*/
        $("#page_title").html(<%- JSON.stringify(title) %>);
        $('#frm_create_rule').formValidation({
        framework: 'bootstrap',
        icon: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
            ruleName: {
                validators: {
                notEmpty: {
                    message: 'Rule name should not be empty'
                }
             }
            },
            ruleDnd: {
                validators: {
                notEmpty: {
                    message: 'Select DND'
                }
             }
            },
            ruleMnp: {
                validators: {
                notEmpty: {
                    message: 'Select MNP'
                }
             }
            },
            operator: {
                validators: {
                notEmpty: {
                    message: 'Select operator'
                }
             }
            },
            circle: {
                validators: {
                notEmpty: {
                    message: 'Select circle'
                }
             }
            },
            smse: {
                validators: {
                notEmpty: {
                    message: 'Select SMSE'
                }
             }
            }
        }
    })
    .on('success.form.fv', function(e) {
        alert("ASK");
        //return formValid;
            e.preventDefault();
        //Ajax Call Here
    });

});

</script>

